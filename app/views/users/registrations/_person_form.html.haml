.fields
  = f.label :name_first, "First Name:"
  = f.text_field :name_first, :size => "20"
  = f.label :name_last, "Last Name:"
  = f.text_field :name_last, :size => "20"
.fields
  = f.label :title, "Title:"
  = f.text_field :title, :size => "83"
  
- f.object.build_organization  
= f.fields_for :organization do |builder|
  .fields
    = builder.label :name, "Organization Name:"
    = builder.text_field :name, :size => "83"
  .fields
    = builder.label :is_provider, "My organization provides travel services"
    = builder.check_box :is_provider
  .fields
    = builder.label :is_supplier, "My organization offers products/services to travel providers"
    = builder.check_box :is_supplier
