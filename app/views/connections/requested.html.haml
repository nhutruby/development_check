- title "Connection Requests"

#content_wrapper
  #full_col.shadow.dark_text
    .col_head
      %h2.float_left
        = "Connection Requests (#{@connections.count})"
      .right
        = link_to "Dashboard", dashboard_path
      .clear
    .block_quote
      - if @connections.count > 0
        = render 'requested_index_list'
      - else
        = "You have no connections to approve at this time."
        