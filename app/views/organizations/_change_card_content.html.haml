.col_head
  %h2.float_left
    = "Change Credit Card Information"
  .clear

.block_quote.left

  %p
    Current Payment Profile:
    .new_line
    Billing Complete Name: 
    = "#{@payment_profile.first_name} #{@payment_profile.last_name}"
    .new_line
    Credit Card Information:
    = "#{@payment_profile.masked_card_number} #{@payment_profile.card_type} (exp. #{@payment_profile.expiration_month}/#{@payment_profile.expiration_year})"
    .new_line
    Billing Email:
    = "#{@organization.billing_email}"
  %br
  %br
  %p
    Please enter the new credit card information:
  
  = simple_form_for @organization, :url => update_card_organization_path(@organization), :html => { :class => 'form_credit_card'} do |f|
    = render 'form_credit_card', :f => f
    %br
    %br
    = f.button :submit, "Please update my credit card information"
    = "or "
    = link_to("cancel", subscriptions_organization_path(@organization), :class => "fancybox-close even_smaller")
